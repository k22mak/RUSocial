<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- Menu Bar -->
    <LinearLayout
        android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dip"
		android:layout_marginBottom="5dip" 
		android:orientation="horizontal"
		android:background="#000000"
		>

        <ImageButton
            android:id="@+id/IBHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:background="@android:color/transparent"
            android:src="@drawable/btn_rusocial"
        	android:contentDescription="@string/IBHome" />

   		<ImageButton
   			android:id="@+id/IBLook"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="20dp"
        	android:layout_marginTop="2dp"
			android:background="@android:color/transparent"
			android:contentDescription="@string/IBLook"
        	android:src="@drawable/btn_look" />
   
   		<ImageButton
        	android:id="@+id/IBMsg"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="20dp"
			android:background="@android:color/transparent"
			android:contentDescription="@string/IBMsg"
			android:layout_marginTop="5dp"
        	android:src="@drawable/btn_msg2" />

   		<ImageButton
        	android:id="@+id/IBFriend"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="20dp"
        	android:layout_marginTop="5dp"			
			android:background="@android:color/transparent"
			android:contentDescription="@string/IBFriend"
        	android:src="@drawable/btn_friends2" />

    	<ImageButton
        	android:id="@+id/IBPref"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="17dp"
        	android:layout_marginTop="3dp"
			android:background="@android:color/transparent"
			android:contentDescription="@string/IBPref"
        	android:src="@drawable/btn_prefs4" />
    
    </LinearLayout>
    	
    <!-- Profile Content -->
    <LinearLayout
        android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="10dip" 
		android:orientation="vertical"
		android:background="@drawable/bg_regular" >
    	
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_weight="0.01"
        	android:layout_height="0dip"
        	android:layout_marginTop="5dip"
        	android:layout_marginLeft="5dip"
        	android:text="@string/TVNewMessage"        
        	android:textColor="#FFFFFF"
        	android:textSize="12sp" />

        <!--  Profile Pic Area -->
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/btn_gray"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/BtnProfilePic"
                android:layout_width="110dip"
                android:layout_height="110dip"
                android:layout_centerInParent="true"
                android:src="@drawable/btn_profile"
                android:background="@drawable/stroke_element"
                android:contentDescription="@string/IVProfilePic" />

           

        </RelativeLayout>
        
        
        <!-- Name Email area -->
        
        
        <LinearLayout
 			android:layout_width="fill_parent"
            android:layout_height="290dip"
            android:layout_marginLeft="10dip"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/btn_profile_area2"
        	android:orientation="vertical" >
            
        	<TextView
        		android:layout_width="fill_parent"
        		android:layout_weight="0.01"
        		android:layout_height="0dip"
        		android:layout_marginLeft="25dip"
        		android:layout_marginRight="25dip"
        		android:text="@string/TVName"
        		android:textColor="#9c9a9a"
        		android:textSize="15sp" />
        
        	<EditText
        	    android:id="@+id/EVReceiver"
        	    android:layout_width="fill_parent"
        	    android:layout_height="1dip"
        	    android:layout_marginLeft="25dip"
        	    android:layout_marginRight="25dip"
        	    android:layout_weight="0.07"
        	    android:hint="@string/EVRecipient"
        	    android:inputType="textEmailAddress|textMultiLine"
        	    android:textColorHint="#999999" />
        	
        	<!--  <TextText
        		android:id="@+id/TVName"
        		android:layout_width="fill_parent"
        		android:layout_weight="0.01"
        		android:layout_height="1dip"
        		android:layout_marginLeft="25dip"
        		android:layout_marginRight="25dip"
        		android:textColorHint="#999999"
        		android:singleLine="true"
        		android:hint="@string/TVName" />-->
       	 
        	<TextView
        		android:layout_width="fill_parent"
        		android:layout_weight="0.01"
        		android:layout_height="0dip"
        		android:layout_marginLeft="25dip"
        		android:layout_marginRight="25dip"
        		android:text="@string/TVMessage"
        		android:textColor="#9c9a9a"
        		android:textSize="15sp" />
        	
        	<EditText
        	    android:id="@+id/EVEmail"
        	    android:layout_width="fill_parent"
        	    android:layout_height="1dip"
        	    android:layout_marginLeft="25dip"
        	    android:layout_marginRight="25dip"
        	    android:layout_weight="0.07"
        	    android:hint="@string/EVBody"
        	    android:inputType="textEmailAddress|textMultiLine"
        	    android:textColorHint="#999999" />
        
       	 <TextView 
        		android:id="@+id/BtnSend"
				android:layout_width="fill_parent"
        		android:layout_weight="0.01"
        		android:layout_height="1dip"
        		android:text="@string/BtnSend"
        		android:textSize="15sp"
				android:background="@drawable/btn_gradient_yellow"
        		android:gravity="center"
        		android:textColor="#FFFFFF"
        		android:layout_marginBottom="10dip"
        		android:layout_marginLeft="25dip"
        		android:layout_marginRight="25dip"
        		android:clickable="true" />
    	
   		</LinearLayout>
   
   </LinearLayout>
		   
</LinearLayout>
