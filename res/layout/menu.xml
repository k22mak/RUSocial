<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical"
    >

    <ImageButton
        android:id="@+id/IBLook"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginTop="50dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="10dip"
        android:layout_weight="0.18"
		android:background="@android:color/transparent"
		android:contentDescription="@string/IBLook"
        android:src="@drawable/btnlookaround" />

	<ImageButton
	    android:id="@+id/IBMsg"
        android:layout_height="10dip"
        android:layout_width="fill_parent"
        android:layout_weight="0.2"
		android:background="@android:color/transparent"
        android:text="@string/BtnMessages"
        android:src="@drawable/btnmenu"
        android:contentDescription="@string/IBMsg"
        android:layout_margin="10dip" />
    
	<ImageButton
	    android:id="@+id/IBFriend"
        android:layout_height="10dip"
        android:layout_width="fill_parent"
        android:layout_weight="0.2"
		android:background="@android:color/transparent"
        android:text="@string/BtnFriendsList"
        android:src="@drawable/btnfriends" 
        android:layout_margin="10dip"
        android:contentDescription="@string/IBFriend" />
	
	<ImageButton
	    android:id="@+id/IBPref"
        android:layout_height="10dip"
        android:layout_width="fill_parent"
        android:layout_weight="0.2"
		android:background="@android:color/transparent"
        android:text="@string/BtnPreferences" 
        android:src="@drawable/btnpreferences"
        android:layout_margin="10dip"
        android:contentDescription="@string/IBPref" />
		   
</LinearLayout>
