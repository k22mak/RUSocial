<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_regular"
    android:orientation="vertical" >

    <!-- Menu Bar -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dip"
        android:paddingTop="5dip"
        android:background="#000000"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/IBHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/IBHome"
            android:src="@drawable/btn_rusocial" />

        <ImageButton
            android:id="@+id/IBLook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/IBLook"
            android:src="@drawable/btn_look" />

        <ImageButton
            android:id="@+id/IBMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/IBMsg"
            android:src="@drawable/btn_msg2" />

        <ImageButton
            android:id="@+id/IBFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/IBFriend"
            android:src="@drawable/btn_friends2" />

        <ImageButton
            android:id="@+id/IBPref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="3dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/IBPref"
            android:src="@drawable/btn_prefs4" />
    </LinearLayout>

    <!-- Social Lite List Content -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginBottom="5dip"
        android:layout_weight="0.5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dip"
            android:text="@string/TVPreference"
            android:textColor="#FFFFFF"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_gradient_blue"
            android:padding="5dp"
            android:text="@string/BtnSocialiteMap"
            android:textColor="#FFFFFF"
            android:textSize="12sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="6"
        
        android:orientation="vertical" >

        <ListView
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#000F1F"
            android:paddingRight="5dp"
            android:scrollbarStyle="outsideOverlay" />
    </LinearLayout>

</LinearLayout>